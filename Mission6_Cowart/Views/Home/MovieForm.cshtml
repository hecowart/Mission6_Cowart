@{
    ViewData["Title"] = "Submit a Motion Picture!";
}

@model Movies

<div class="text-center">
    <br />
    <h1 class="display-4">Submit a Motion Picture!</h1>
</div>
<br />
<br />
<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title"  />
    <br />
    <br />
    <label asp-for="Category">Category:</label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
            @foreach (Categories c in ViewBag.Category)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
    </select>
    <br />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number"  />
    <br />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"  />
    <br />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" >
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="TV-Y">TV-Y</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" >
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex" >
        <option value="true">Yes</option>           <!--copied to plex, edited, rating, title, year, director-->
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />
    <br />
    <br />
    <br />
    <button type="submit">Submit Motion Picture</button>

    <div asp-validation-summary="All"></div>

</form>
<br />